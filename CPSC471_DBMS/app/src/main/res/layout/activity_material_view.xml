<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/activity_spacer">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/cpl_logo"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/activity_spacer"
            android:layout_marginEnd="@dimen/activity_spacer"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/activity_spacer"
            android:layout_marginEnd="@dimen/activity_spacer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title : The Thief Lord"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/activity_spacer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genre: Fantasy/Adventure"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/activity_spacer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Languages: German, English"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/activity_spacer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: Book"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/activity_spacer"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available: Yes"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Borrow Item"
        android:layout_marginStart="@dimen/activity_spacer"
        android:layout_marginEnd="@dimen/activity_spacer"/>

</LinearLayout>