<?xml version="1.0" encoding="utf-8"?>

<!--Used in all the ListViews from results and categories.-->
<!--This fragment represents a single item in a ListView.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_book_1"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        android:layout_margin="@dimen/activity_spacer"
        android:layout_marginStart="@dimen/activity_spacer"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/activity_spacer">

        <TextView
            android:id="@+id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Thief Lord"
            android:textColor="@color/textColour"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/bookGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fantasy"
                android:textColor="@color/textColour"
                android:textSize="12sp"
                android:layout_marginEnd="@dimen/activity_spacer"/>

            <TextView
                android:id="@+id/bookAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cornelia Funke"
                android:textColor="@color/textColour"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/activity_spacer"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>