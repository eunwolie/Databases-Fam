<?xml version="1.0" encoding="utf-8"?>

<!--Only used in account tab.-->
<!--This fragment is the title and contains a list of all the materials in a segment.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_spacer">

    <!--Text to be changed for each section of the account tab.-->
    <TextView
        android:id="@+id/titleText"
        android:text="PLACEHOLDER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_margin="@dimen/activity_spacer"/>

    <ListView
        android:id="@+id/sectionList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    </ListView>

</LinearLayout>