<?xml version="1.0" encoding="utf-8"?>

<!--Used in all the ListViews from results and categories.-->
<!--This fragment represents a single item in a ListView.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Image to be updated. Image currently set is default.-->
    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/cpl_logo"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/activity_spacer"
        android:layout_gravity="center"/>

    <!--Name of item to be update. Text currently set is default.-->
    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITEM"
        android:textColor="@color/textColour"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_spacer"/>

</LinearLayout>