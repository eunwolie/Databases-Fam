<?xml version="1.0" encoding="utf-8"?>

<!--This Scrollview contains the profile and descriptions for an individual.
    Also contains all the sections: On Hold, Checked Out, Overdue.-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColour">

    <!--Not sure how big the buttons will be for the books in the fragments.
        Also I'll make the divider more aesthetic one day.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--THE IMAGE IS A PLACEHOLDER CHILL-->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/cpl_logo"
            android:layout_marginTop="@dimen/activity_spacer"
            android:layout_marginBottom="@dimen/activity_spacer"/>

        <!--Placeholder name string-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: thrasher"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/activity_spacer"/>

        <!--Placeholder id string-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: 69202"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <!--Divider for layout. Optional.-->
        <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="@dimen/activity_spacer"/> -->

        <!--Section for items on hold.-->
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="finalproject.cpsc471_dbms.SectionFragment"
            android:id="@+id/onHoldSection"
            tools:layout="@layout/section_fragment"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <!--Section for items checked out.-->
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="finalproject.cpsc471_dbms.SectionFragment"
            android:id="@+id/checkedOutSection"
            tools:layout="@layout/section_fragment"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

        <!--Section for items overdue.-->
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="finalproject.cpsc471_dbms.SectionFragment"
            android:id="@+id/overdueSection"
            tools:layout="@layout/section_fragment"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    </LinearLayout>

</ScrollView>